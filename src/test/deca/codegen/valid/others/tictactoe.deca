int joueur = 1;
boolean victoire = false;
int tours = 0;
int choix;

while(!victoire && tours < 9) {

    println("Tour n",tours," | C'est au joueur ",joueur," de jouer : ");

    //Affichage du tableau
    println("+---+---+---+");
    println("| ",c1," | ",c2," | ",c3," |");
