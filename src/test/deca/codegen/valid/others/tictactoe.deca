    //Choix du joueur
    println("Choix du joueur ",joueur," (1 à 9) : ");
    choix = readint();

         if (choix == 1 && c1 == 0) {c1 = joueur;}
    else if (choix == 2 && c2 == 0) {c2 = joueur;}
    else if (choix == 3 && c3 == 0) {c3 = joueur;}
    else if (choix == 4 && c4 == 0) {c4 = joueur;}
    else if (choix == 5 && c5 == 0) {c5 = joueur;}
